<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:alpha="1"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/text_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:text="确定要退出？"
        />
    <TextView
        android:id="@+id/dete_text_deia"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@id/text_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <View
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/dete_text_deia"
        android:background="@color/colorPrimary"
        android:id="@+id/diver_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/diver_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="否"
            android:id="@+id/delete_no_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:textSize="30sp"
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="是"
            android:id="@+id/delete_yes_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>