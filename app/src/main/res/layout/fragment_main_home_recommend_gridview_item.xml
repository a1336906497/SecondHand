<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <ImageView
        android:id="@+id/home_recommend_gridview_image"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_empty"
        android:layout_width="170dp"
        android:layout_height="170dp" />
    <TextView
        android:id="@+id/home_recommend_gridview_name"
        android:layout_below="@id/home_recommend_gridview_image"
        android:text="名称描述"
        android:maxLines="1"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/home_recommend_gridview_name"
       android:id="@+id/home_recommend_gridview_price"
        android:layout_alignRight="@id/home_recommend_gridview_image"
        android:text="￥25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@id/home_recommend_gridview_price"
        android:id="@+id/home_recommend_gridview_place"
        android:text="交易地点"
        android:drawableLeft="@mipmap/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>